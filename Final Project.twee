$(document).on('click', '#echo-icon', function () {
  // Fetch Echo Points and Collected Items
  var echoPoints = State.variables.echoPoints || 0;
  var collectedItems = State.variables.collectedItems || 'None';

  // Update Echo Points
  $('#echo-points').text(echoPoints);

