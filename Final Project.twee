  transform: translateX(-50%);
  width: 90%;
  max-width: 350px;
  background-color: #344734; /* Softer shade of green */
  border-radius: 8px;
  border: 2px solid #fff;
  color: #fff;
  text-align: center;
  padding: 10px 15px;
}

/* Close Button */
.close {
  position: absolute;
  top: 10px;
  right: 15px;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
  cursor: pointer;
}

/* Modal Header */
.modal h3 {
  margin-top: 0;
  margin-bottom: 5px; /* Reduced space */
}

/* Info Container */
.info-container {
  margin: 0;
  padding: 0;
}

/* Info Row */
.info-row {
  display: flex;
  justify-content: space-between;
  margin: 3px 0; /* Reduced space between rows */
}

/* Info Labels and Values */
.info-label {
  color: rgba(255, 255, 255, 0.8);
}

.info-value {
  color: #fff;
  font-weight: bold;
}

/* Star Rating */
.star-rating {
  font-size: 24px;
  color: gold;
}

/* Ending Badge */
.ending-badge {
  display: inline-block;
  padding: 10px 15px;
  margin-top: 10px;
  border-radius: 5px;
  font-weight: bold;
  text-transform: uppercase;
}

/* Badge colors for different endings */
.ending-badge.best { background-color: #4CAF50; }
.ending-badge.good { background-color: #8BC34A; }
.ending-badge.neutral { background-color: #FFC107; }
.ending-badge.bad { background-color: #FF5722; }
.ending-badge.worst { background-color: #F44336; }