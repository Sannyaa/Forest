});

// Close Modal with Close Button
$(document).on('click', '.close', function () {
  $('#echo-modal').hide();
});

// Close Modal by Clicking Outside
$(window).on('click', function (event) {
  if (event.target == document.getElementById('echo-modal')) {
    $('#echo-modal').hide();
  }
});


